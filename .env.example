# WhatsApp Agent Environment Configuration
# Copy this to .env and modify as needed

# WAHA Server Settings
WAHA_BASE_URL=http://localhost:4500
# WAHA_API_KEY=your-secure-api-key-here

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Environment (development, production, testing)
ENVIRONMENT=development

# Security Settings
ENABLE_CORS=true
# CORS_ORIGINS=["http://localhost:8000"]

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_SCREENSHOTS=true
ENABLE_GROUP_MANAGEMENT=true
ENABLE_CONTACT_MANAGEMENT=true

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# UI Settings
DEFAULT_THEME=light
ENABLE_ANIMATIONS=true
DEFAULT_LANGUAGE=en

# Notifications
ENABLE_DESKTOP_NOTIFICATIONS=true
ENABLE_SOUND_NOTIFICATIONS=false

# Ollama Configuration (for WhatsApp warmer feature)
OLLAMA_MODEL=gemma3:1b
OLLAMA_API_BASE=http://localhost:11434